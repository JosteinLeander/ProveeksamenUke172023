  <script>
  
    function activeMenu() {
      let menuItems = document.getElementById('menu').getElementsByTagName('a');
      for (let i = 0; i < menuItems.length; i++) {
        if (document.location.href.indexOf(menuItems[i].href) >= 0) {
          if (menuItems[0].className == 'active') {
            menuItems[0].classList.remove('active');
          }
          menuItems[i].className = 'active';
        }
      }
    };
    window.onload = activeMenu;
  </script>